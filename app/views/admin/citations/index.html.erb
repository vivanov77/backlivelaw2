<h1>Цитаты</h1>

<table>
  <thead>
    <tr>
      <th>Текст</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citations.each do |citation| %>
      <tr>
        <td><%= citation.text %></td>
        <td><%= link_to 'Показать', [:admin, citation] %></td>
        <td><%= link_to 'Редактировать', edit_admin_citation_path(citation) %></td>
        <td><%= link_to 'Удалить', [:admin, citation], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая цитата', new_admin_citation_path %>
