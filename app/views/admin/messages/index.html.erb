<h1>Сообщения</h1>

<table>
  <thead>
    <tr>
      <th>Id&nbsp;&nbsp;&nbsp;</th>     
      <th>Отправитель Id</th>    
      <th>Отправитель</th>
      <th>Получатель Id</th>
      <th>Получатель</th>      
      <th>Содержимое</th>
      <th>Создано</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>      
        <td><%= message.try(:sender).try(:id) %></td>
        <td><%= message.try(:sender).try(:email) %></td>        
        <td><%= message.try(:recipient).try(:id) %></td>
        <td><%= message.try(:recipient).try(:email) %></td>        
        <td><%= message.text %></td>
        <td><%= message.created_at %></td>        
        <td><%= link_to 'Показать', [:admin, message] %></td>
        <td><%= link_to 'Редактировать', edit_admin_message_path(message) %></td>
        <td><%= link_to 'Удалить', [:admin, message], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новое сообщение', new_admin_message_path %>
