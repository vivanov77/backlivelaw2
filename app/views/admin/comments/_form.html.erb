    <%#= f.label "Вопрос" %><br />
    <%#= select_tag :question_id, options_from_collection_for_select(Question.order(:title), :id, :title, @commentable.id), {:include_blank => "Ничего не выбрано"} %>
  </div>   -->  

  <% if @commentable.class.to_s.downcase == "question" %>

    <%= hidden_field_tag :question_id, @commentable.id %>

  <% elsif @commentable.class.to_s.downcase == "comment" %>

    <%= hidden_field_tag :comment_id, @commentable.id %>

  <% end %>


  <div class="field">
    <%= f.label "Заголовок" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label "Содержимое комментария" %>
    <%= f.text_area :text, :cols => 40, :rows => 10 %>
  </div>  

  <div class="field">
    <%= f.label "Пользователь" %><br />
    <%= f.collection_select :user_id, User.roled(:client), :id, :email, {:include_blank => "Ничего не выбрано"},
