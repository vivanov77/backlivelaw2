<h1>Документы</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Выбрано клиентом</th> -->
      <th>Содержимое</th>
      <th>Цена</th>
      <th>Создатель</th>
      <th>Документ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @docs.each do |doc| %>
      <tr>
<!--         <td><%#= doc.chosen %></td> -->
        <td><%= doc.text %></td>
        <td><%= doc.price %></td>
        <td><%= doc.user.try(:email) %></td>
        <td><%= doc.try(:doc_request).try(:title) %></td>
        <td><%= link_to 'Показать', [:admin, doc] %></td>
        <td><%= link_to 'Редактировать', edit_admin_doc_path(doc) %></td>
        <td><%= link_to 'Удалить', [:admin, doc], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый документ', new_admin_doc_path %>
